
cd ~/Desktop/ultimate

for file in ultimate*.png; do
  name="ultimate2"
  mkdir -p "../ColeccioDragonBall/Assets.xcassets/ultimate2.imageset"
  cp "ultimate2.png" "../ColeccioDragonBall/Assets.xcassets/ultimate2.imageset/ultimate2.png"
  cat > "../ColeccioDragonBall/Assets.xcassets/ultimate2.imageset/Contents.json" <<EOF
{
  "images": [
    {
      "idiom": "universal",
      "filename": "ultimate2.png",
      "scale": "1x"
    }
  ],
  "info": {
    "version": 1,
    "author": "xcode"
  }
}
