  name="ultimate6"
  mkdir -p "../ColeccioDragonBall/Assets.xcassets/ultimate6.imageset"
  cp "ultimate6.png" "../ColeccioDragonBall/Assets.xcassets/ultimate6.imageset/ultimate6.png"
  cat > "../ColeccioDragonBall/Assets.xcassets/ultimate6.imageset/Contents.json" <<EOF
{
  "images": [
    {
      "idiom": "universal",
      "filename": "ultimate6.png",
      "scale": "1x"
    }
  ],
  "info": {
    "version": 1,
    "author": "xcode"
  }
}
