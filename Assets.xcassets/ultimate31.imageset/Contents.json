  mkdir -p "../ColeccioDragonBall/Assets.xcassets/ultimate31.imageset"
  cp "ultimate31.png" "../ColeccioDragonBall/Assets.xcassets/ultimate31.imageset/ultimate31.png"
  cat > "../ColeccioDragonBall/Assets.xcassets/ultimate31.imageset/Contents.json" <<EOF
{
  "images": [
    {
      "idiom": "universal",
      "filename": "ultimate31.png",
      "scale": "1x"
    }
  ],
  "info": {
    "version": 1,
    "author": "xcode"
  }
}
