
cd ~/Desktop/ultimate

for file in ultimate*.png; do
  name="ultimate20"
  mkdir -p "../ColeccioDragonBall/Assets.xcassets/ultimate20.imageset"
  cp "ultimate20.png" "../ColeccioDragonBall/Assets.xcassets/ultimate20.imageset/ultimate20.png"
  cat > "../ColeccioDragonBall/Assets.xcassets/ultimate20.imageset/Contents.json" <<EOF
{
  "images": [
    {
      "idiom": "universal",
      "filename": "ultimate20.png",
      "scale": "1x"
    }
  ],
  "info": {
    "version": 1,
    "author": "xcode"
  }
}
