  cp "ultimate29.png" "../ColeccioDragonBall/Assets.xcassets/ultimate29.imageset/ultimate29.png"
  cat > "../ColeccioDragonBall/Assets.xcassets/ultimate29.imageset/Contents.json" <<EOF
