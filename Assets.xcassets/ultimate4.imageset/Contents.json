
cd ~/Desktop/ultimate

for file in ultimate*.png; do
  name="ultimate4"
  mkdir -p "../ColeccioDragonBall/Assets.xcassets/ultimate4.imageset"
  cp "ultimate4.png" "../ColeccioDragonBall/Assets.xcassets/ultimate4.imageset/ultimate4.png"
  cat > "../ColeccioDragonBall/Assets.xcassets/ultimate4.imageset/Contents.json" <<EOF
{
  "images": [
    {
      "idiom": "universal",
      "filename": "ultimate4.png",
      "scale": "1x"
    }
  ],
  "info": {
    "version": 1,
    "author": "xcode"
  }
}
