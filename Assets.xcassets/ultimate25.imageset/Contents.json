
cd ~/Desktop/ultimate

for file in ultimate*.png; do
  name="ultimate25"
  mkdir -p "../ColeccioDragonBall/Assets.xcassets/ultimate25.imageset"
  cp "ultimate25.png" "../ColeccioDragonBall/Assets.xcassets/ultimate25.imageset/ultimate25.png"
  cat > "../ColeccioDragonBall/Assets.xcassets/ultimate25.imageset/Contents.json" <<EOF
{
  "images": [
    {
      "idiom": "universal",
      "filename": "ultimate25.png",
      "scale": "1x"
    }
  ],
  "info": {
    "version": 1,
    "author": "xcode"
  }
}
