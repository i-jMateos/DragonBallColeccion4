
cd ~/Desktop/ultimate

for file in ultimate*.png; do
  name="ultimate5"
  mkdir -p "../ColeccioDragonBall/Assets.xcassets/ultimate5.imageset"
  cp "ultimate5.png" "../ColeccioDragonBall/Assets.xcassets/ultimate5.imageset/ultimate5.png"
  cat > "../ColeccioDragonBall/Assets.xcassets/ultimate5.imageset/Contents.json" <<EOF
{
  "images": [
    {
      "idiom": "universal",
      "filename": "ultimate5.png",
      "scale": "1x"
    }
  ],
  "info": {
    "version": 1,
    "author": "xcode"
  }
}
