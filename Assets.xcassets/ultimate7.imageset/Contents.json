
cd ~/Desktop/ultimate

for file in ultimate*.png; do
  name="ultimate7"
  mkdir -p "../ColeccioDragonBall/Assets.xcassets/ultimate7.imageset"
  cp "ultimate7.png" "../ColeccioDragonBall/Assets.xcassets/ultimate7.imageset/ultimate7.png"
  cat > "../ColeccioDragonBall/Assets.xcassets/ultimate7.imageset/Contents.json" <<EOF
{
  "images": [
    {
      "idiom": "universal",
      "filename": "ultimate7.png",
      "scale": "1x"
    }
  ],
  "info": {
    "version": 1,
    "author": "xcode"
  }
}
