
cd ~/Desktop/ultimate

for file in ultimate*.png; do
  name="ultimate32"
  mkdir -p "../ColeccioDragonBall/Assets.xcassets/ultimate32.imageset"
  cp "ultimate32.png" "../ColeccioDragonBall/Assets.xcassets/ultimate32.imageset/ultimate32.png"
  cat > "../ColeccioDragonBall/Assets.xcassets/ultimate32.imageset/Contents.json" <<EOF
{
  "images": [
    {
      "idiom": "universal",
      "filename": "ultimate32.png",
      "scale": "1x"
    }
  ],
  "info": {
    "version": 1,
    "author": "xcode"
  }
}
