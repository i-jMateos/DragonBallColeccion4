
cd ~/Desktop/ultimate

for file in ultimate*.png; do
  name="ultimate3"
  mkdir -p "../ColeccioDragonBall/Assets.xcassets/ultimate3.imageset"
  cp "ultimate3.png" "../ColeccioDragonBall/Assets.xcassets/ultimate3.imageset/ultimate3.png"
  cat > "../ColeccioDragonBall/Assets.xcassets/ultimate3.imageset/Contents.json" <<EOF
{
  "images": [
    {
      "idiom": "universal",
      "filename": "ultimate3.png",
      "scale": "1x"
    }
  ],
  "info": {
    "version": 1,
    "author": "xcode"
  }
}
