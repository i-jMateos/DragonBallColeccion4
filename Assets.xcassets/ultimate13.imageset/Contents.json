  name="ultimate13"
  mkdir -p "../ColeccioDragonBall/Assets.xcassets/ultimate13.imageset"
  cp "ultimate13.png" "../ColeccioDragonBall/Assets.xcassets/ultimate13.imageset/ultimate13.png"
  cat > "../ColeccioDragonBall/Assets.xcassets/ultimate13.imageset/Contents.json" <<EOF
{
  "images": [
    {
      "idiom": "universal",
      "filename": "ultimate13.png",
      "scale": "1x"
    }
  ],
  "info": {
    "version": 1,
    "author": "xcode"
  }
}
