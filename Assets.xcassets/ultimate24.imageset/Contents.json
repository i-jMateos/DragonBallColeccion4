
cd ~/Desktop/ultimate

for file in ultimate*.png; do
  name="ultimate24"
  mkdir -p "../ColeccioDragonBall/Assets.xcassets/ultimate24.imageset"
  cp "ultimate24.png" "../ColeccioDragonBall/Assets.xcassets/ultimate24.imageset/ultimate24.png"
  cat > "../ColeccioDragonBall/Assets.xcassets/ultimate24.imageset/Contents.json" <<EOF
{
  "images": [
    {
      "idiom": "universal",
      "filename": "ultimate24.png",
      "scale": "1x"
    }
  ],
  "info": {
    "version": 1,
    "author": "xcode"
  }
}
