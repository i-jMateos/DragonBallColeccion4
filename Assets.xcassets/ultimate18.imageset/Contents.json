
cd ~/Desktop/ultimate

for file in ultimate*.png; do
  name="ultimate18"
  mkdir -p "../ColeccioDragonBall/Assets.xcassets/ultimate18.imageset"
  cp "ultimate18.png" "../ColeccioDragonBall/Assets.xcassets/ultimate18.imageset/ultimate18.png"
  cat > "../ColeccioDragonBall/Assets.xcassets/ultimate18.imageset/Contents.json" <<EOF
{
  "images": [
    {
      "idiom": "universal",
      "filename": "ultimate18.png",
      "scale": "1x"
    }
  ],
  "info": {
    "version": 1,
    "author": "xcode"
  }
}
