
cd ~/Desktop/ultimate

for file in ultimate*.png; do
  name="ultimate8"
  mkdir -p "../ColeccioDragonBall/Assets.xcassets/ultimate8.imageset"
  cp "ultimate8.png" "../ColeccioDragonBall/Assets.xcassets/ultimate8.imageset/ultimate8.png"
  cat > "../ColeccioDragonBall/Assets.xcassets/ultimate8.imageset/Contents.json" <<EOF
{
  "images": [
    {
      "idiom": "universal",
      "filename": "ultimate8.png",
      "scale": "1x"
    }
  ],
  "info": {
    "version": 1,
    "author": "xcode"
  }
}
